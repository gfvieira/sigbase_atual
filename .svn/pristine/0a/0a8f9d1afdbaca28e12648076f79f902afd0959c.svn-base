function campoObservacao() {

    if ($('#selectSO').val() === 'OUTROS') {
        $('#infoHost').append("<div class=\"row\" id=\"obs\"><div class=\"col-sm-2 \">"
                + "<label class=\"col-sm-2\">Observação</label> <input type=\"text\"  class=\"form-control\" id=\"obsInput\""
                + " name=\"obsInput\" value=\"\" required></input>"
                + " </div></div>");
    } else {
            $('#obs').remove();
    }
}


